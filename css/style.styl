$color_fg_1 = #cbcbcf;
$color_fg_2 = #dcdce0;
$color_fg_3 = #ededf1;
$color_fg_4 = #efeff3;
$color_fg_5 = #fff;
$color_bg_1 = #004;
$color_bg_2 = #323236;
$color_bg_3 = #545458;
$color_bg_4 = #98989c;
$color_bg_5 = #a9a9ad;
$color_bg_6 = #b9b9bd;

* {
    text-rendering: geometricPrecision;
}

body {
    overflow: hidden;

    line-height: 1.3;

    font-family: 'Droid Sans', 'Lucida Grande', sans-serif;
    font-size: 14px;
}

#main {
  position: relative;

  width: 1000px;
  height: 480px;

  margin: 32px auto;
  padding: 8px;

  border-radius: 2px;

  box-shadow: 1px 1px 2px 0 $color_fg_2, 0 0 0 1px $color_fg_3;
}

#player {
}

#ticker {
  position: absolute;
  top: 0;
  right: 8px;
  bottom: 0;

  overflow: hidden;

  width: 360px;

  > .list {
    position: absolute;
    top: 8px;
    right: 0;
    bottom: 69px;
    left: 8px;

    overflow-x: hidden;
    overflow-y: auto;

    -webkit-transition-duration: .2s;
    -webkit-transition-property: bottom left right;

    > article {
      position: relative;

      overflow: hidden;

      margin-bottom: 8px;
      padding: 24px 8px 8px;

      border-radius: 2px;

      background-color: $color_fg_1;

      .name {
        position: absolute;
        top: 4px;
        left: 51px;

        color: $color_bg_3;

        cursor: pointer;
      }

      .tag {
        overflow: hidden;

        display: inline-block;

        width: 295px;

        margin: 1px 0 0 43px;

        text-overflow: ellipsis;
        white-space: nowrap;

        time {
          display: inline-block;

          padding: 2px 4px 1px;

          border-radius: 2px;

          background-color: $color_fg_2;

          font-size: 12px;

          cursor: pointer;

          -webkit-transition-duration: .2s;
          -webkit-transition-property: background-color;

          &:hover {
            background-color: $color_bg_4;
          }
        }

        q {
          margin-left: 2px;

          &::before,
          &::after {
            content: '';
          }
        }
      }

      .avatar {
        position: absolute;
        top: 8px;
        bottom: 8px;
        left: 8px;

        width: 36px;
        height: 36px;

        border-radius: 2px;

        background-color: $color_fg_5;
        background-size: 36px;

        cursor: pointer;
      }

      .button {
        position: absolute;
        top: 4px;

        display: inline-block;

        width: 18px;
        height: 18px;

        border-radius: 2px;

        background-position: 50% 50%;
        background-repeat: no-repeat;

        cursor: pointer;

        opacity: 0;

        -webkit-transition-duration: .2s;
        -webkit-transition-property: background-color opacity;

        &.on {
          background-color: $color_bg_5;

          opacity: 1;
        }

        &:hover {
          background-color: $color_bg_4;
        }

        &.replies {
          right: 26px;

          background-image: url('../assets/chat.svg');
        }

        &.like {
          right: 4px;

          background-image: url('../assets/like.svg');
        }

        &.options {
          right: 48px;

          background-image: url('../assets/gear.svg');

          &.on {
            opacity: 1;

            background-color: $color_bg_4;
          }
        }
      }

      &.promoted {
        background-color: $color_fg_1;

        &::before {
          content: 'VIP';

          position: absolute;
          top: 3px;
          left: -49px;
          z-index: 1;

          width: 128px;
          height: 17px;

          -webkit-transform: rotate(-45deg);

          background-color: $color_bg_3;
          color: $color_fg_3;

          text-align: center;
        }
      }

      for $num in 0..8 {
        &:nth-child({$num}) .avatar {
          background-image: url('../assets/avatar/avatar_' + $num + '.jpg');
        }
      }

      &:hover {
        .button {
          opacity: 1;
        }
      }
    }

    &.reduced {
      bottom: 82px;
    }

    &.feed {
      &.hidden {
        right: 100%;
        left: -100%;
      }
    }

    &.user {
      &.hidden {
        right: -100%;
        left: 100%;
      }

      &.hidden-2 {
        right: 100%;
        left: -100%;
      }

      > article {
        .avatar {
          background-image: url('../assets/avatar/my_avatar.png');
        }

        .tag {
          overflow: visible;

          white-space: initial;
        }
      }
    }

    &.replies {
      &.hidden {
        right: -100%;
        left: 100%;
      }

      .button.options {
        right: 26px;
      }

      > article {
        margin-left: 0px;

        background-color: $color_fg_1;

        .tag {
          overflow: visible;

          white-space: initial;

          q {
            margin-left: 0;
          }
        }

        &.post {
          margin-left: 0;

          background-color: $color_bg_6;

          .avatar {
            background-image: url('../assets/avatar/my_avatar.png');
          }

          q {
            margin-left: 2px;
          }
        }
      }
    }
  }

  > .form {
    position: absolute;
    right: 0;
    bottom: 42px;
    left: 8px;
    z-index: 2;

    border-radius: 2px;
    border: 1px solid $color_fg_2;

    background-color: $color_fg_5;
    background-origin:content-box;

    &.on {
      box-shadow: 0 -1px 1px 0 $color_fg_5, 0 -6px 6px 0 $color_fg_5;
    }

    time {
      position: absolute;
      top: 3px;
      left: 7px;

      font-family: 'Droid Sans Mono', monospace;

      color: $color_bg_5;
    }

    .count {
      position: absolute;
      bottom: 3px;
      left: 10px;

      display: none;

      color: $color_bg_5;
    }

    textarea {
      height: 17px;

      margin-left: 56px;

      box-sizing: content-box;

      width: 286px;

      padding: 4px 8px 0 0;

      border: 0;
      outline: 0;

      resize: none;

      -webkit-transition-duration: .2s;
      -webkit-transition-property: height;

      &:focus {
        height: 30px;
      }
    }
  }

  > footer {
    position: absolute;
    right: 0;
    bottom: 8px;
    left: 8px;

    border-radius: 2px;

    background-color: $color_bg_5;

    text-align: right;

    .button {
      display: inline-block;

      padding: 4px 8px;

      color: $color_fg_5;

      cursor: pointer;

      &.hidden {
        display: none;
      }

      &.back,
      &.back-2 {
        float: left;
      }
    }
  }
}

#options-menu {
  position: absolute;
  z-index: 3;

  overflow: hidden;

  display: none;

  margin-top: 1px;

  border-radius: 2px;

  background-color: $color_bg_4;
  color: $color_fg_5;

  font-size: 12px;

  &.on {
    display: block;
  }

  > .item {
    display: block;

    padding: 4px 8px;

    cursor: pointer;

    & + .item {
      border-top: 1px solid $color_fg_3;
    }

    &:active {
      background-color: $color_bg_3;
    }
  }
}
