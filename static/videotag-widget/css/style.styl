$color_fg_1 = #cbcbcf;
$color_fg_2 = #dcdce0;
$color_fg_3 = #ededf1;
$color_fg_4 = #efeff3;
$color_fg_5 = #fff;
$color_bg_1 = #000;
$color_bg_2 = #323236;
$color_bg_3 = #545458;
$color_bg_4 = #98989c;
$color_bg_5 = #a9a9ad;
$color_bg_6 = #b9b9bd;
$color_err = #f00;
$color_warn = #fa0;
$color_white = #fff;
$color_light = #95959d;
$color_medium = #70706f;
$color_dark = #50504f;
$color_bluish = #b9b9bf;

@import url('http://fonts.googleapis.com/css?family=Droid+Sans:400,700|Droid+Sans+Mono');

* {
    text-rendering: geometricPrecision;
}

body {
    overflow: hidden;

    line-height: 1.3;

    font-family: 'Droid Sans', 'Lucida Grande', sans-serif;
    font-size: 14px;

    background-image: url('../assets/bg_white.png');
    background-repeat: repeat;

    > iframe {
        opacity: 0;
    }
}

.right {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 2;

    overflow: hidden;

    width: 312px;

    > .menu {
        position: absolute;
        right: 8px;
        bottom: 8px;
        left: 8px;
        z-index: 3;

        border-radius: 2px;

        background-image: url('../assets/bg_grey.png');
        background-repeat: repeat;

        box-shadow: 1px 1px 1px 0 lighten($color_light, 50%);

        text-align: right;

        .item {
            display: inline-block;

            padding: 4px 8px;

            color: $color_dark;

            cursor: pointer;

            &.hidden {
                display: none;
            }

            &.back,
            &.back-2 {
                float: left;
            }
        }
    }
}

.tickers {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

.tickers > .ticker {
    position: absolute;
    top: 6px;
    right: 6px;
    bottom: 69px;
    left: 6px;

    overflow-y: auto;
    overflow-x: hidden;

    -webkit-transition-duration: .2s;
    -webkit-transition-property: bottom left right;

    > .message {
        position: relative;

        overflow: hidden;

        display: none;

        margin: 0 2px 8px -1px;
        padding: 24px 8px 6px;

        border-radius: 4px 2px 2px 4px;

        background-image: url('../assets/bg_grey.png');
        background-repeat: repeat;

        box-shadow: 1px 1px 1px 0 lighten($color_light, 50%);

        .username {
            position: absolute;
            top: 4px;
            left: 51px;

            color: $color_medium;

            cursor: pointer;
        }

        .text {
            overflow: hidden;

            display: inline-block;

            width: 238px;

            margin: 1px 0 0 43px;
            padding-bottom: 2px;

            text-overflow: ellipsis;
            white-space: nowrap;

            .reference {
                display: inline-block;

                padding: 2px 4px 1px;

                border-radius: 2px;

                background-color: rgba($color_bluish, .3);
                color: $color_medium;

                border: 1px solid darken(rgba($color_bluish, .3), 5%);

                font-size: 12px;

                cursor: pointer;

                -webkit-transition-duration: .2s;
                -webkit-transition-property: background-color;

                &:hover {
                    background-color: rgba(darken($color_bluish, 5%), .4);
                    color: $color_dark;
                }
            }

            .content {
                margin-left: 2px;

                color: $color_dark;
            }
        }

        .avatar {
            position: absolute;
            top: 8px;
            bottom: 8px;
            left: 8px;

            width: 36px;
            height: 36px;

            border-radius: 2px;

            background-size: 36px;

            cursor: pointer;
        }

        .context-menu {
            position: absolute;
            top: 4px;
            right: 4px;

            display: block;

            height: 18px;

            direction: rtl;

            .item {
                display: inline-block;

                width: 18px;
                height: 18px;

                margin-left: 1px;

                border-radius: 2px;

                background-position: 50% 50%;
                background-repeat: no-repeat;

                opacity: 0;

                cursor: pointer;

                -webkit-transition-duration: .2s;
                -webkit-transition-property: background-color opacity;

                &:hover {
                    background-color: rgba($color_bluish, .4);
                }

                &.on {
                    background-color: $color_bluish;

                    opacity: 1;
                }

                &.replies {
                    background-image: url('../assets/chat_dark.svg');
                }

                &.twitter {
                    background-image: url('../assets/twitter_dark.svg');
                    background-size: 100%;
                }

                &.like {
                    background-image: url('../assets/like_dark.svg');

                    &.on {
                        background-image: url('../assets/like.svg');
                    }

                    &.red {
                        background-image: url('../assets/like.svg');
                        background-color: darken($color_bluish, 10%);

                        opacity: 1;
                    }
                }

                &.delete {
                    display: none;

                    background-image: url('../assets/delete_dark.svg');
                }

                &.options {
                    background-image: url('../assets/gear_dark.svg');
                }
            }
        }

        &.promoted {
            // TODO background-color: $color_fg_1;

            &::before {
                content: 'VIP';

                position: absolute;
                top: 3px;
                left: -49px;
                z-index: 1;

                width: 128px;
                height: 17px;

                -webkit-transform: rotate(-45deg);

                // TODO background-color: $color_bg_3;
                // TODO color: $color_fg_3;

                text-align: center;
            }
        }

        &.my {
            .context-menu {
                .item.delete {
                    display: inline-block;
                }
            }
        }

        &.on {
            display: block;
        }

        &:hover {
            .context-menu {
                .item {
                    opacity: 1;
                }
            }
        }
    }

    &.user {
        > .message {
            background-color: #0c0;

            .text {
                overflow: visible;

                white-space: initial;
            }
        }
    }

    &.reply {
        .button.options {
            right: 26px;
        }

        > .message {
            margin-left: 0px;

            // TODO background-color: $color_fg_1;

            .text {
                overflow: visible;

                white-space: initial;

                .content {
                    margin-left: 0;
                }
            }

            &.post {
                margin-left: 0;

                // TODO background-color: $color_bg_6;

                q {
                    margin-left: 2px;
                }
            }
        }
    }

    &.hideRight {
        right: -100%;
        left: 100%;
    }

    &.hideLeft {
        right: 100%;
        left: -100%;
    }
}

.tickers > .form {
    position: absolute;
    right: 8px;
    bottom: 42px;
    left: 8px;
    z-index: 2;

    border-radius: 2px;

    background-color: $color_white;
    background-origin:content-box;

    box-shadow: 1px 1px 1px 0 lighten($color_light, 50%);

    .reference {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;

        width: 76px;
        line-height: 25px;

        border-radius: 2px 0 0 2px;

        background-image: url('../assets/bg_grey.png');
        background-repeat: repeat;
        color: $color_medium;

        font-family: 'Droid Sans Mono', monospace;
        text-align: center;

        -webkit-transition-duration: .2s;
        -webkit-transition-property: line-height;
    }

    .counter {
        position: absolute;
        bottom: 3px;
        right: 7px;

        font-family: 'Droid Sans Mono', monospace;

        color: $color_light;

        opacity: 0;

        -webkit-transition-duration: .2s;
        -webkit-transition-property: opacity;

        &.warning {
            color: $color_warn;
        }

        &.error {
            color: $color_err;
        }
    }

    textarea {
        height: 17px;

        margin-left: 86px;

        box-sizing: content-box;

        width: 202px;

        padding: 4px 8px 0 0;

        border: 0;
        outline: 0;

        color: $color_dark;

        resize: none;

        -webkit-transition-duration: .2s;
        -webkit-transition-property: height;
    }
}

.tickers.on {
    > .ticker {
        bottom: 82px;
    }

    > .form {
        .reference {
            line-height: 38px;
        }
        .counter {
            opacity: 1;
        }

        textarea {
            height: 30px;
        }
    }
}

.popin {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: -1;

    display: table;

    max-width: 400px;
    width: 50%;
    max-height: 0;
    height: 0;

    margin: auto;
    vertical-align: middle;

    text-align: center;

    opacity: 0;

    -webkit-transition-duration: .2s;
    -webkit-transition-property: opacity;

    &::after {
        content: '';

        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;

        display: block;

        width: 100%;

        height: 100%;

        background-color: rgba($color_white, .85);
    }

    > .wrap {
        display: inline-block;

        padding: 12px 0;

        border-radius: 2px;

        background-image: url('../assets/bg_white.png');
        background-repeat: repeat;

        box-shadow: 1px 1px 1px 0 lighten($color_light, 50%);

        text-align: left;

        header {
            margin: 0 12px 12px;
            padding: 4px 8px;

            border-radius: 2px;

            background-color: $color_bluish;
            background-image: url('../assets/bg_grey.png');
            background-repeat: repeat;
            color: $color_dark;

            text-shadow: 1px 1px 0 $color_white;
        }

        p {
            clear: both;

            padding: 0 12px;

            & + p {
                margin-top: 12px;
            }

            &.error {
                display: none;

                margin: 12px 12px 0;
                padding: 4px 8px;

                border-radius: 2px;

                background-color: $color_err;
                color: $color_white;

                &:first-letter {
                    text-transform: uppercase;
                }

                &.on {
                    display: block;
                }
            }
        }

        input,
        textarea {
            padding: 4px;

            border-radius: 2px;
            border: 1px solid $color_bluish;

            &:not([type="submit"]) {
                display: block;

                width: -webkit-calc(100% \- 10px);
            }

            &[type="submit"] {
                border: 1px solid darken(rgba($color_bluish, .3), 5%);

                &.submit {
                    background-color: rgba($color_bluish, .3);
                    color: $color_dark;
                }

                &.sign-up {
                    background-color: rgba($color_bluish, .2);
                    color: $color_light;
                }

                &:hover {
                    background-color: rgba($color_dark, .5);
                    color: $color_white;
                }
            }
        }
    }

    &.sign-up {
        & > .wrap input[type="submit"].submit {
            color: $color_fg_5;
        }
    }

    &.on {
        z-index: 20;

        opacity: 1;
    }
}
