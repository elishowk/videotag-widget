* {
  margin: 0;
  padding: 0;
}

html,
body {
  width: 100%;
  height: 100%;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: inherit;
  font-size: inherit;
}

a {
  text-decoration: none;

  img {
    border: 0;
  }
}

table {
  width: 100%;

  border-collapse: collapse;
}

input,
button,
select,
textarea {
  background-color: transparent;
  color: inherit;

  font-size: inherit;
  font-family: inherit;
}
